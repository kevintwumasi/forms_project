public class Menu
{
	/* purpose: to show the menu over various
	 * modules of the program. The functions
	 * here will print various statements,
	 * check values and spit them out in return
	 * towards the outside.
	 */
	private String contentsMenu = "DEFAULT MENU HERE";
	private int menuRange = -1;

	public Menu() {
		;
	}
	// set methods
	public void setContents(String newContents) {
		this.contentsMenu = newContents;
	}

	public void setmenuRange(int newRange) {
		this.menuRange = newRange;
	}


	// get methods
	public void getContents() {
		System.out.println(this.contentsMenu);
	}

	public int getmenuRange() {
		return this.menuRange;
	}

	// stringed method
	public static void bab() {
		System.out.println("Hello");
	}

	// messages
	private void invalidOptionMenu() {
		System.out.println("Invalid option. Try again.");
	}

	/*
